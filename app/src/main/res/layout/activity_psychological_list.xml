<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"

        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >


            <LinearLayout
                android:id="@+id/backLL"
                android:layout_width="@dimen/dp_70"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/backImageView"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_40"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"

                    android:layout_alignParentLeft="true"
                    android:src="@drawable/back"

                    />
            </LinearLayout>


            <ImageView
                android:id="@+id/notification_im"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:foregroundGravity="center"

                android:src="@drawable/notification" />


        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#989898"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:fillViewport="true"
        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorGrayType2"
            app:layout_constraintBottom_toBottomOf="@+id/scroll"
            app:layout_constraintEnd_toEndOf="@+id/scroll"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view">

            <ImageView
            android:id="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/psychological_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

            <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/psychological_counselling"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/img1"
            app:layout_constraintStart_toEndOf="@+id/img1"
            app:layout_constraintTop_toTopOf="@+id/img1" />

            <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="6dp"
            android:background="#989898"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img1" />


            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/view1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/self_development_cv"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_220"
                        android:layout_margin="@dimen/dp_5"
                        android:layout_weight="1"
                        app:cardCornerRadius="@dimen/dp_15"
                        app:cardElevation="@dimen/dp_3"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/pshylogical_background"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/dp_70"
                                android:layout_height="@dimen/dp_60"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dp_50"
                                android:src="@drawable/self_development" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_20">

                                <com.boushra.View.fredokaTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginVertical="@dimen/dp_5"
                                    android:layout_marginBottom="@dimen/dp_10"
                                    android:background="@drawable/btnbackground"
                                    android:gravity="center"
                                    android:text="Self-Development Counselling"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/text_size_medium_large"
                                    android:textStyle="bold" />

                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/family_cv"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_220"
                        android:layout_margin="@dimen/dp_5"
                        android:layout_weight="1"
                        app:cardCornerRadius="@dimen/dp_15"
                        app:cardElevation="@dimen/dp_3"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/pshylogical_background"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/dp_70"
                                android:layout_height="@dimen/dp_60"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dp_50"
                                android:src="@drawable/family_counselling" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_20">

                                <com.boushra.View.fredokaTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginVertical="@dimen/dp_5"
                                    android:background="@drawable/btnbackground"
                                    android:gravity="center"
                                    android:text="@string/family_counselling2"

                                    android:textColor="@color/white"
                                    android:textSize="@dimen/text_size_medium_large"
                                    android:textStyle="bold" />

                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/psychological_cv"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_220"
                        android:layout_margin="@dimen/dp_5"
                        android:layout_weight="1"
                        app:cardCornerRadius="@dimen/dp_15"
                        app:cardElevation="@dimen/dp_3"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/pshylogical_background"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/dp_70"
                                android:layout_height="@dimen/dp_60"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dp_50"
                                android:src="@drawable/psychological" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_20">

                                <com.boushra.View.fredokaTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginVertical="@dimen/dp_5"
                                    android:background="@drawable/btnbackground"
                                    android:gravity="center"
                                    android:text="Psychological Counselling"
                                    android:textColor="@color/white"

                                    android:textSize="@dimen/text_size_medium_large"
                                    android:textStyle="bold" />

                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/parenting_cv"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_220"
                        android:layout_margin="@dimen/dp_5"
                        android:layout_weight="1"
                        app:cardCornerRadius="@dimen/dp_15"
                        app:cardElevation="@dimen/dp_3"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/pshylogical_background"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/dp_70"
                                android:layout_height="@dimen/dp_60"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dp_50"
                                android:src="@drawable/parenting" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_20">

                                <com.boushra.View.fredokaTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginVertical="@dimen/dp_5"
                                    android:background="@drawable/btnbackground"
                                    android:gravity="center"
                                    android:text="Parenting Counselling"
                                    android:textColor="@color/white"

                                    android:textSize="@dimen/text_size_medium_large"
                                    android:textStyle="bold" />

                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>





